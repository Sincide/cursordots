# Border colors
$border_color = {{BORDER_COLOR}}
$border_focus_color = {{BORDER_FOCUS_COLOR}}

# =============================================================================
# Hyprland-specific color applications
# =============================================================================

general {
    # Border colors
    col.active_border = $accent_color $primary_color 45deg
    col.inactive_border = $border_color
    
    # Background
    col.nogroup_border = $border_color
    col.nogroup_border_active = $accent_color
    
    # Gap colors
    gaps_in = 5
    gaps_out = 10
    gaps_workspaces = 50
}

